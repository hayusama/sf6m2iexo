<div class="container">
    <form action="">
        <div class="form-group row">
            <label for="image" class="col-sm-4 col-form-label">Image : </label>
            <div class="col-sm-8">
                <input type="file" name="image" id="image" class="form-control" placeholder="Votre image">
                <small id="fileHelpId" class="form-text text-muted">Chargement de votre image</small>
            </div>
        </div>
        <div class="form-group row mt-3">
            <label for="titre" class="col-sm-4 col-form-label">Titre de l'article</label>
            <div class="col-sm-8">
                <input type="text" name="titre" id="titre" class="form-control" placeholder="Titre de l'article">
            </div>
        </div>
        <div class="form-group row mt-3">
            <label for="categorie" class="col-sm-4 col-form-label">Catégories (php, html, css)</label>
            <div class="col-sm-8">
                <input type="text" name="categorie" id="categorie" class="form-control" placeholder="Catégories (php, html, css)">
            </div>
        </div>
        <div class="form-group row">
            <label for="contenu" class="col-sm-4 col-form-label">Intégrez le contenu de votre article</label>
            <textarea name="contenu" id="contenu" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-check row form-switch">
            <label for="publication" class="form-check-label col-form-label">
                <input type="checkbox" class="form-check-input" name="publication" id="publication" value="1">
                publier votre article?
            </label>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 com-sm-10">
                <button type="submit" class="btn btn-primary">Enregistrement de votre article</button>
            </div>
        </div>
    </form>
</div>

