<body>
    
    <h1>lecture de l'article</h1>

    <div>
        <ul>
            <li>URL : <strong>{{url|upper|trim}}</strong></li>
            <li>ID : <strong>{{id}}</strong></li>
        </ul>
    </div>

    <div>
        {{webmaster}}
    </div>


    <div>
        {% if id >= 5 %}
            <p>ID sup ou egal a 5</p>
        {% else %}
            <p>ID inf a 5</p>
        {% endif %}
    </div>

    <div>
        {{( id == 25 ) ? "oui" : "non"}}
    </div>

    <div>
        {# SI WEBMASTER N'EST PAS VIDE J'AFFICHE LE CONTENU SINON NON INDIQUE #}
        {{ webmaster ?? "Non indiqu√©"}}
    </div>

    <div>
        {{dump(tabInfo)}}
    </div>


    <ul>
        {% for key, item in tabInfo %}
            <li>{{key}}  ==  {{item}}</li>
        {% else %}
            <li>Pas d'utilisateur</li>
        {% endfor %}
    </ul>

    <select name="pays" id="">
        {% for key, item in pays %}
        <option value="{{key}}">{{item}}</option>
        {% endfor %}
    </select>

    <div> 
        <table border=1>
            {% for info in tabinfo %} 
                <tr>
                    {% if loop.index is odd %}
                           <td style = "background-color: red">{{info}}</td>
                    {% else %}
                            <td>{{info}}</td>
                    {% endif %} 
                </tr>
            {% endfor %}
        </table>
    </div>
    
</body>